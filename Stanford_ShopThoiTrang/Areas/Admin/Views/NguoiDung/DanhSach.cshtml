@model IEnumerable<Stanford_ShopThoiTrang.Models.NguoiDung>
@{
    ViewBag.Title = "Quản lý thông tin người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_ShopAdmin.cshtml";
}

